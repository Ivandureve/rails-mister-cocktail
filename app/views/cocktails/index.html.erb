<h1>Cocktails:</h1>







<div class="container">

  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, default_image: "default.jpg", height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Popular</div>
        <div class="card-description">
           <h2><%= link_to cocktail.name.titleize, cocktail_path(cocktail) %></h2>
           <p><%= link_to "Delet", cocktail_path(cocktail), method: :delete %></p>
          <p><%= cocktail.name.titleize %></p>
        </div>
        <%= cl_image_tag cocktail.photo, class: "card-user avatar" %>
        <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
