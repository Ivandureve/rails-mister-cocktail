<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>
<p><%= link_to "New", new_cocktail_path %></p>

<% @cocktails.each do |cocktail| %>

  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
  <% cocktail.doses.each do |dose| %>
    <p> <% dose.description %></p>
  <% end %>
<% end %>
